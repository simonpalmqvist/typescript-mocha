{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es5",
        "outDir": "dist",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "moduleResolution": "node"
    },
    "filesGlob": [
      "./src/**/*.ts",
      "./test/**/*.ts",
      "./node_modules/@types/**/*.ts"
    ]
}
